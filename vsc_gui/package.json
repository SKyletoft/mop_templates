{
	"name": "md407-code",
	"displayName": "MD407 Integration",
	"publisher": "skyletoft",
	"description": "",
	"repository": {
		"url": "https://github.com/SKyletoft/mop_template"
	},
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/main.js",
	"contributes": {
		"commands": [
			{
				"command": "md407.reload_ports",
				"title": "Reload ports",
				"icon": {
					"light": "media/light_refresh.svg",
					"dark": "media/dark_refresh.svg"
				}
			},
			{
				"command": "md407.reload_projects",
				"title": "Reload projects",
				"icon": {
					"light": "media/light_refresh.svg",
					"dark": "media/dark_refresh.svg"
				}
			},
			{
				"command": "md407.set_project",
				"title": "Set project"
			},
			{
				"command": "md407.set_port",
				"title": "Set port"
			},
			{
				"command": "md407.set_rate",
				"title": "Set baud rate"
			},
			{
				"command": "md407.run",
				"title": "Do"
			},
			{
				"command": "md407.new_basic",
				"title": "Create new project from the Basic template"
			},
			{
				"command": "md407.new_crt",
				"title": "Create new project from the CRT template"
			},
			{
				"command": "md407.download-gcc",
				"title": "Download and install the complier toolchain"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "media/md407.svg",
					"id": "md407-config",
					"title": "MD407 Config"
				}
			]
		},
		"views": {
			"md407-config": [
				{
					"id": "md407-projects",
					"name": "Project"
				},
				{
					"id": "md407-actions",
					"name": "Action"
				},
				{
					"id": "md407-ports",
					"name": "Port Config"
				},
				{
					"id": "md407-rates",
					"name": "Baud Rate Config"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "md407.reload_ports",
					"when": "view == md407-ports",
					"group": "navigation"
				},
				{
					"command": "md407.reload_projects",
					"when": "view == md407-projects",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "md407.run",
					"when": "view == md407-actions",
					"group": "inline"
				},
				{
					"command": "md407.set_project",
					"when": "view == md407-projects",
					"group": "inline"
				},
				{
					"command": "md407.set_port",
					"when": "view == md407-ports",
					"group": "inline"
				},
				{
					"command": "md407.set_rate",
					"when": "view == md407-rates",
					"group": "inline"
				}
			]
		},
		"taskDefinitions": [
			{
				"type": "md407-build",
				"required": [
					"directory"
				],
				"properties": {
					"directory": {
						"type": "string",
						"description": "The directory containing the makefile for that project"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"esbuild": "^0.14.27",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"adm-zip": "^0.5.9",
		"comment-json": "^4.2.2",
		"debug": "github:WebFreak001/code-debug",
		"request": "^2.88.2",
		"request-progress": "^3.0.0",
		"vscode-debugadapter": "^1.51.0",
		"vscode-debugprotocol": "^1.51.0"
	},
	"extensionDependencies": [
		"webfreak.debug",
		"llvm-vs-code-extensions.vscode-clangd",
		"xaver.clang-format"
	]
}
